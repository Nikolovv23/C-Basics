// Create a program that reads a day of the week (text) â€“ entered by the user and prints on the console the price of a cinema ticket according to the day of the week:

// Monday	Tuesday	Wednesday	Thursday	Friday	Saturday	Sunday
//  12     	12	     14	       14	      12	     16	      16

using System;
namespace CinemaTicket
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string day = Console.ReadLine();
            switch (day)
            {
                case "Monday":
                case "Tuesday":
                case "Friday":
                    Console.WriteLine("12");
                    break;
                case "Wednesday":
                case "Thursday":
                    Console.WriteLine("14");
                    break;
                case "Saturday":
                case "Sunday":
                    Console.WriteLine("16");
                    break;
                default:
                    break;

            }
        }
    }
}
